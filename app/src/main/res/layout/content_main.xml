<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.clubederobotica.cdr_bt.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:id="@+id/garraUP"
        android:layout_width="75dp"
        android:layout_height="69dp"
        android:layout_gravity="bottom|left"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|center_horizontal"
        android:background="@drawable/ic_garra"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/garraDown"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:layout_gravity="bottom|right"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|center_horizontal"
        android:background="@drawable/ic_garradown"
        android:layout_below="@+id/garraUP"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp" />


    <ImageButton
        android:id="@+id/btnUp"
        android:layout_width="89dp"
        android:layout_height="88dp"
        android:background="@drawable/ic_up"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="99dp"
        android:layout_above="@+id/btnRight"
        android:layout_alignLeft="@+id/btnstop"
        android:layout_alignStart="@+id/btnstop" />

    <ImageButton
        android:id="@+id/btnDown"
        android:layout_width="89dp"
        android:layout_height="88dp"
        android:background="@drawable/ic_down"
        tools:layout_editor_absoluteY="275dp"
        tools:layout_editor_absoluteX="148dp"
        android:layout_below="@+id/btnstop"
        android:layout_alignRight="@+id/btnstop"
        android:layout_alignEnd="@+id/btnstop" />

    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="89dp"
        android:layout_height="88dp"
        android:background="@drawable/ic_left"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="187dp"
        android:layout_above="@+id/btnDown"
        android:layout_toLeftOf="@+id/btnDown"
        android:layout_toStartOf="@+id/btnDown" />

    <ImageButton
        android:id="@+id/btnRight"
        android:layout_width="89dp"
        android:layout_height="88dp"
        android:background="@drawable/ic_right"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="187dp"
        android:layout_alignBottom="@+id/btnstop"
        android:layout_toRightOf="@+id/btnstop"
        android:layout_toEndOf="@+id/btnstop" />

    <ImageButton
        android:id="@+id/btnstop"
        android:layout_width="88dp"
        android:layout_height="89dp"
        android:background="@drawable/button_stop"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="187dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>